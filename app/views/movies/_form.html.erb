<%=form_for :movie123 , url: movies_path do |f|%>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form role="form">

                    <div class="form-group">

                        <label for="exampleInputEmail1">
                            Title
                        </label>
                        <%=f.text_field :title,  class: "form-control", required: true %>

                    </div>

                    <%if params[:view]=="automatic"%>
                        
                        <%= hidden_field_tag 'view' , view%>
                    
                    <%else%>
                    

                    <div class="form-group">

                        <label for="exampleInputPassword1">
                            Cast
                        </label>

                        <%=f.text_field :cast,  class: "form-control", required: true %>

                    </div>

                    <div class="form-group">

                        <label for="exampleInputPassword1">
                            Genre
                        </label>

                        <%=f.text_field :genre,  class: "form-control", required: true %>

                    </div>

                    <div class="form-group">

                        <label for="exampleInputPassword1">
                            Plot
                        </label>

                        <%=f.text_field :plot,  class: "form-control", required: true %>

                    </div>

                    <div class="form-group">

                        <label for="exampleInputPassword1">
                            Image
                        </label>

                        <%= f.file_field :image, class: "form-control", required: true %>
                    </div>

                    <div class="form-group">

                        <label for="exampleInputPassword1">
                            Rating
                        </label>

                        <%=f.text_field :rating,  class: "form-control", required: true %>

                    </div>

                    <div class="form-group">

                        <label for="exampleInputPassword1">
                            Web
                        </label>

                        <%=f.text_field :web,  class: "form-control", required: true %>

                     <%end%>
                    </div>

                    <button type="submit" class="btn btn-default">
                        Submit
                    </button>
                </form>
            </div>
        </div>
    </div>
    <%end%>

   