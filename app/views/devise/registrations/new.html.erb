
        <div  class="container-fluid" style="">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
      
            <div class="container" style="padding-left: 165px;padding-right: 135px;width: 700px; border-style: outset ;margin-top:70px; background-color: #ff00008f    border-width: 10px; background-color: #e7e7e7" >
                <div class="col-md-12">
                    <form role="form">
                        
                   
                        <h2>Sign Up For MovieBox</h2>
                        <hr style=" border-style: inset;border-width: 1px;">
                        

                        <div class="form-group">
                            <label for="exampleInputEmail1">Name</label> <br>                          
                            <%= f.text_field :name, autofocus: true , class: "form-control", required: true%>
                      

                      </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <br>
                            <%= f.email_field :email, autofocus: true ,  class: "form-control", required: true %>
                        </div>
                        
                        <div class="form-group">

                            <label for="exampleInputPassword1">Image</label>
                            <%= f.file_field :uimage,  required: true  %>
                        </div>

                        <div class="form-group">

                            <label for="exampleInputPassword1">Password</label>
                            <br>
                           
                                <% if @minimum_password_length %>
                                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                                    <% end %>
                                        <br />
                                        <%= f.password_field :password, autocomplete: "off" ,  class: "form-control", required: true %>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Confirm Password</label>
                            <br>
                            <%= f.password_field :password_confirmation, autocomplete: "off" ,  class: "form-control",required: true %>
                        </div>

                        <button type="submit" class="btn btn-default">
                            Sign Up
                        </button>
                        
                    </form>
                </div>
            <%= render "devise/shared/links" %>
                        
            </div>
        <% end %>
        
    






